<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4682B4"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/gw_logo2" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Class Registration Helper"
                android:textColor="#FAFAFAFA"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center_horizontal" />

            <ImageButton
                android:id="@+id/userInfo2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/user"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Class Search"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textColor="#4682B4"
            android:textStyle="bold"
            android:textSize="40dp"
            android:layout_marginTop="45dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select a Term"
                android:textSize="20dp"
                android:textColor="#4682B4"/>

            <Spinner
                android:id="@+id/term"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:entries="@array/spinner_term"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject"
                android:textSize="20dp"
                android:textColor="#4682B4"/>

            <Spinner
                android:id="@+id/subject"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:entries="@array/spinner_subject"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Number"
                android:textSize="20dp"
                android:textColor="#4682B4"/>

            <Spinner
                android:id="@+id/spinnerCourse"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:entries="@array/spinner_course"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Course Number Range"
            android:textSize="20dp"
            android:textColor="#4682B4"
            android:gravity="center"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/range1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:padding="12dp"
                android:background="#BBDEFB"
                android:maxLength="4"
                android:digits="1234567890"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="-"/>
            <EditText
                android:id="@+id/range2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:padding="12dp"
                android:background="#BBDEFB"
                android:maxLength="4"
                android:digits="1234567890"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/searchCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:background="@drawable/button_shape"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="20dp"/>

            <Button
                android:id="@+id/clearForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:background="@drawable/button_shape"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="40dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#4682B4"
            android:layout_marginTop="65dp">

        <Button
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:background="@drawable/border"
            android:textColor="@color/colorWhite"
            android:text="Home"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>