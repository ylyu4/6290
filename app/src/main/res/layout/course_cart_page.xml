<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/coursesCartLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4682B4"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/gw_logo2" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Class Registration Helper"
                android:textColor="#FAFAFAFA"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center_horizontal" />

            <ImageButton
                android:id="@+id/imageButton9"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_menu_my_calendar"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/courseCartLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Course Cart"
                android:textColor="#4682B4"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textSize="35dp"
                android:layout_marginVertical="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="55dp"
                    android:text="CRN"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:background="#ADD8E6"
                    android:gravity="center" />
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="55dp"
                    android:background="#ADD8E6"
                    android:text="Class"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center" />
                <TextView
                    android:layout_width="95dp"
                    android:layout_height="55dp"
                    android:background="#ADD8E6"
                    android:text="Title"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center" />
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="55dp"
                    android:background="#ADD8E6"
                    android:text="Section"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center" />
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="55dp"
                    android:background="#ADD8E6"
                    android:text="Type"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center" />
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="55dp"
                    android:background="#ADD8E6"
                    android:text="Action"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000" />
        </LinearLayout>


        <Button
            android:id="@+id/registerCourses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate Schedule"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#4682B4"
            android:layout_marginTop="150dp">

            <Button
                android:id="@+id/backSearchPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BACK"/>

            <Button
                android:id="@+id/backHomePage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:layout_marginLeft="75dp"/>

            <Button
                android:id="@+id/goToSchedulePage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:layout_marginLeft="75dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>