<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4682B4"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/gw_logo2" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Class Registration Helper"
            android:textColor="#FAFAFAFA"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center_horizontal" />

        <ImageButton
            android:id="@+id/userInfo1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_my_calendar"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Main Menu"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textColor="#4682B4"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_marginTop="35dp"/>



    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/search"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/classSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Class Search"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/text_color"
        android:layout_marginLeft="140dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/cart"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/myCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Cart"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#4682B4"
        android:layout_marginLeft="165dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/schedule"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/classSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class Schedule"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#4682B4"
        android:layout_marginLeft="135dp" />






</LinearLayout>

